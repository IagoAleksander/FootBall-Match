<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.filipe.footballmatch"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filipe.footballmatch.LoginActivity">

    <ImageView
        android:id="@+id/ranking_prod_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/background1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_margin="64dp"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            tools:override = "true"
            android:textColorHint="@color/grey_500">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_login"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:alpha="0.6"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/grey_500">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/prompt_password"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:alpha="0.6"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/buttonLogin"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Login"
            android:minWidth="196dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:elevation="1dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/google_login"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/action_google_sign_in"
            android:minWidth="196dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:elevation="1dp"
            android:background="@drawable/bg_google"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey_800"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/facebook_login"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/action_facebook_sign_in"
            android:minWidth="196dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/bg_facebook"
            android:elevation="1dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/buttonRegister"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Register"
            android:minWidth="196dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@color/colorPrimary"
            android:elevation="1dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

    </LinearLayout>
</RelativeLayout>
